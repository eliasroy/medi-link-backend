{
  "name": "medi-link-backend",
  "version": "1.0.0",
  "description": "sistema backend de medilink",
  "homepage": "https://github.com/eliasroy/medi-link-backend#readme",
  "bugs": {
    "url": "https://github.com/eliasroy/medi-link-backend/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliasroy/medi-link-backend.git"
  },
  "license": "ISC",
  "author": "elias roy provincia",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "tsc && node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageDirectory=coverage",
    "test:istanbul": "nyc --reporter=html --reporter=text jest",
    "test:auth": "jest --testPathPattern=auth.service",
    "test:report": "npm run test:coverage && start coverage/index.html",
    "build": "tsc",
    "artillery": "artillery"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": false,
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts",
      "src/**/__tests__/**",
      "src/dataFaker.ts",
      "node_modules",
      "dist"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "report-dir": "coverage"
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.5",
    "sequelize": "^6.37.7",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/cors": "^2.8.19",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "jest-html-reporters": "^3.1.7",
    "nyc": "^17.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "artillery": "^2.0.12",
    "ts-node-dev": "^2.0.0"
  }
}
